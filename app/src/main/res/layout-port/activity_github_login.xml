<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobimation.xamarinformssamplebrowser.ActivityGithubLogin"
    android:background="#3498db"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="33">

        <ImageView
            android:layout_width="212dp"
            android:layout_height="fill_parent"
            android:id="@+id/logoXamarin"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/xamarin_logo"
            android:scaleType="fitCenter"
            android:layout_marginTop="30dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="33">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/editTextUserId"
            android:layout_marginTop="30dp"
            android:hint="GitHub User Id"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#cccccc"
            android:textSize="20sp"
            android:text="gunnar.forsgren@mobimation.com" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/editTextPassword"
            android:layout_marginTop="20dp"
            android:hint="GitHub password"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#cccccc"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="33"
        android:gravity="center">

        <Button
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="LOGIN"
            android:id="@+id/buttonLogin"
            android:background="#ffffff"
            android:textColor="#3498db"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/labelStatus"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>
